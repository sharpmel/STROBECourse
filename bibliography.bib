	keywords = {Humans, Observation, Randomized Controlled Trials as Topic, Evidence-Based Medicine, Diabetes Mellitus, Type 1, Diabetes Mellitus, Type 2, Hypoglycemic Agents, Insulin, Practice Patterns, Physicians'},
